<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="samples.linhtruong.com.playground">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".java.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".java.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".java.google_arch.test.DataBindingActivity"
            android:label="@string/activity_data_binding_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".java.google_arch.test.databinding_profile_sample.view.ProfileActivity"
            android:label="@string/activity_data_binding_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".java.google_arch.test.viewmodel_test.UsersActivity"
            android:label="@string/activity_data_binding_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".java.google_arch.test.livedata_test.FruitsActivity"
            android:label="@string/activity_data_binding_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".java.google_arch.test.room_test.RoomTestActivity"
            android:label="@string/activity_data_binding_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".java.utils.CardViewActivity"
            android:label="@string/activity_data_binding_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".kotlin.google_arch.livedata.LiveDataActivityTest"
            android:label="@string/activity_data_binding_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".java.custom_views.FanControllerActivity"
            android:label="CustomViewTest" />

        <service android:name=".kotlin.google_arch.livedata.LiveDataServiceTest"></service>
    </application>
</manifest>