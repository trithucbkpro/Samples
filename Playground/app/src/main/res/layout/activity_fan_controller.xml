<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="Fan Controller"
        android:textAllCaps="true"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/fanView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_goneMarginBottom="32dp" />

    <samples.linhtruong.com.playground.java.custom_views.FanView
        android:id="@+id/fanView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:fanOnColor="@color/cyan1"
        app:fanOffColor="@color/red1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>