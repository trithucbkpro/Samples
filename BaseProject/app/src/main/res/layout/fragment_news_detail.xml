<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/txtTitle"
        style="@style/RobotoM.18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/imgNews"
        android:layout_width="@dimen/news_detail_photo_size_width"
        android:layout_height="@dimen/news_detail_photo_size_height"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:scaleType="fitXY"
        android:src="@drawable/ic_place_holder" />

    <TextView
        android:id="@+id/txtSummary"
        style="@style/Roboto.16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin" />

    <Button
        android:id="@+id/btnStoryLink"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_default_height"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:text="@string/label_full_story"
        android:textAllCaps="true" />

</LinearLayout>